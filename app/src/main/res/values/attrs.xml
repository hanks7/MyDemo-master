<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RunText">
        <attr name="marqueeview_repet_type" format="enum">

            <enum name="repet_oncetime" value="0" /><!--播放一次-->
            <enum name="repet_interval" value="1" /><!--连续播放 循环结束再继续下次循环-->
            <enum name="repet_continuous" value="2" /> <!--连续播放 到末尾直接继续下次循环-->
        </attr><!--循环模式-->

        <attr name="marqueeview_text_distance" format="integer" /><!--每个item之间的距离-->
        <attr name="marqueeview_text_startlocationdistance" format="float" /><!--开始的起始位置 按距离控件左边的
百分比 0~1之间 -->
        <attr name="marqueeview_text_speed" format="float" /><!--播放速度 也就是文字滚动速度-->
        <attr name="marqueeview_text_color" format="color|reference" /><!-- 文字颜色 -->
        <attr name="marqueeview_text_size" format="float" /><!-- 文字大小 -->
        <attr name="marqueeview_isclickalbe_stop" format="boolean" /><!--是否点击暂停-->
        <attr name="marqueeview_is_resetLocation" format="boolean" /><!--重新改变内容的时候 ， 是否初始化 位置，
默认为true，改变-->
    </declare-styleable>
    <string-array name="titles">
        <item>Android</item>
        <item>IOS</item>
        <item>JAVA</item>
        <item>C++</item>
        <item>Ruby</item>
        <item>WEB</item>
        <item>HTML</item>
        <item>PERL</item>
        <item>C</item>
        <item>SWIFT</item>
        <item>Python</item>
        <item>C</item>
        <item>C#</item>
        <item>JS</item>
    </string-array>

    <string-array name="items">
        <item>Normal List</item>
        <item>Normal Grid</item>
        <item>Normal Staggered</item>
        <item>Multiple List</item>
        <item>Multiple Grid</item>
        <item>Header Bottom List</item>
        <item>Header Bottom Grid</item>
        <item>Anim List</item>
        <item>Anim Grid</item>
        <item>Expended List</item>
        <item>Expended Grid</item>
        <item>Single Select</item>
        <item>Multiple Select</item>
    </string-array>
    <declare-styleable name="ProgressView">
        <attr name="progress_title" format="string" />
        <attr name="progress_num" format="string" />
        <attr name="progress_unit" format="string" />

        <attr name="titleTextSize" format="dimension" />
        <attr name="numTextSize" format="dimension" />
        <attr name="unitTextSize" format="dimension" />

        <attr name="titleTextColor" format="color" />
        <attr name="numTextColor" format="color" />
        <attr name="unitTextColor" format="color" />

        <attr name="backCircleWidth" format="dimension" />
        <attr name="outerCircleWidth" format="dimension" />

        <attr name="backCircleColor" format="color" />
        <attr name="outerCircleColor" format="color" />

        <attr name="endCircleWidth" format="dimension" />
        <attr name="endCircleColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CountDownButton">
        <attr name="countDownFormat" format="string" />
        <attr name="countDown" format="float" />
        <attr name="countDownInterval" format="float" />
        <attr name="enableCountDown" format="boolean" />
        <attr name="cdFinishText" format="string" />
    </declare-styleable>
</resources>